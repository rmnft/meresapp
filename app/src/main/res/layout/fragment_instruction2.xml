<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/you4"
    tools:context=".InstructionsActivity">


    <TextView
        android:id="@+id/tvInstructionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/horizon"
        android:text="Instruções"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInstructionsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nourd_light"
        android:gravity="center"
        android:text="Nessa PROXIMA etapa você verá 5 grupos com 4 frases. Selecione aquela que você MAIS acredita."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInstructionsTitle"
        app:layout_constraintWidth_default="spread" />


    <TextView
        android:id="@+id/tvTopic1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1. Clique em INICIAR para começar o questionário."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/nourd_light"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvInstructionsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/tvTopic2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2. Cada grupo contém 4 frases. Selecione a que mais se identifica com você."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/nourd_light"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTopic1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/tvTopic3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3. Você pode navegar entre os grupos clicando em AVANÇAR."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/nourd_light"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTopic2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/tvTopic4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4. Ao final do questionário, você verá o seu perfil comportamental."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/nourd_light"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTopic3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <ImageView
        android:id="@+id/ivExample"
        android:layout_width="350dp"
        android:layout_height="569dp"
        android:src="@drawable/teste_disc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="141dp"
        android:layout_height="76dp"
        android:backgroundTint="#8B69D0"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Iniciar"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

</androidx.constraintlayout.widget.ConstraintLayout>
